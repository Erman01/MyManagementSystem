@model List<ManagementApp.Models.EntityFramework.ImageGallery>
@{
    ViewBag.Title = "ImageGalleryIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
    <h1 class="font-weight-light text-center text-lg-left mt-4 mb-0"> My Gallery</h1>
<br />
@Html.ActionLink("Upload a Cover Photo", "GalleryImageUpload", "User", new { @class = "btn btn-primary" })
<br />
<hr />
<div id="gallery">
    @foreach (var item in Model)
    {
        <div class="item-container">
            <div class="gallery-item">
                <a href="~/Content/UserGallery/@item.GalleryImagePath" target="_blank">
                    <img src="~/Content/UserGallery/@item.GalleryImagePath" alt="" />
                </a>
                <div class="description">
                    @item.GalleryImageName
                </div>
                @Html.ActionLink(" Go to Gallery", "ImageIndex", "User")
           <br />
                @Html.ActionLink("|", "GalleryDelete", new { id = item.Id }, new { @class = "far fa-trash-alt", onclick = "return confirm('Are you sure to delete this Image?')" })
            </div>
        </div>

    }


</div>

