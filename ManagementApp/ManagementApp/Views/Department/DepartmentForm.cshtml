@model ManagementApp.Models.EntityFramework.Department
@{
    ViewBag.Title = "DepartmentForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@Html.ValidationSummary()
<br />
<h2>Department Form</h2>

@using (Html.BeginForm("Save", "Department", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.DepartmentName)
        @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.DepartmentName)
    </div>
    @Html.HiddenFor(x => x.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
    {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
